{
  "ConnectionStrings": {
    "DefaultConnection": "placeholder_replaced_by_testcontainers"
  },
  "MockAuth": {
    "Enabled": false
  },
  "ServerConfig": {
    "BaseUrl": "http://localhost"
  },
  "ClientConfig": {
    "BaseUrl": "http://localhost"
  },
  "TestUser": {
    "Username": "test@example.com",
    "Password": "TestPassword123!"
  },
  "OrderConfig": {
    "OutputDirectory": "Zarichney.Server.Tests/TestData/Orders"
  },
  "CustomerConfig": {
    "OutputDirectory": "Zarichney.Server.Tests/TestData/Customers"
  },
  "RecipeConfig": {
    "OutputDirectory": "Zarichney.Server.Tests/TestData/Recipes"
  },
  "SessionConfig": {
    "CleanupIntervalMins": 60,
    "DefaultDurationMins": 15,
    "MaxConcurrentCleanup": 10
  },
  "JwtSettings": {
    "SecretKey": "test-secret-key-for-testing-environment-at-least-32-characters-long",
    "Issuer": "https://api.test.zarichney.com",
    "Audience": "https://test.zarichney.com",
    "ExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7,
    "TokenCleanupIntervalHours": 168
  },
  "LlmConfig": {
    "ApiKey": "${OPENAI_API_KEY:-}",
    "OrganizationId": "${OPENAI_ORG_ID:-}",
    "ModelName": "gpt-4o-mini",
    "MaxTokens": 150,
    "Temperature": 0.7,
    "RetryAttempts": 3
  },
  "TranscribeConfig": {
    "ModelName": "whisper-1",
    "RetryAttempts": 3
  },
  "EmailConfig": {
    "FromEmail": "test@example.com",
    "AzureTenantId": "${MSGRAPH_TENANT_ID:-}",
    "AzureAppId": "${MSGRAPH_CLIENT_ID:-}",
    "AzureAppSecret": "${MSGRAPH_CLIENT_SECRET:-}",
    "MailCheckApiKey": "${MSGRAPH_MAIL_CHECK_KEY:-}",
    "TemplateDirectory": "Services/Email/Templates"
  },
  "PaymentConfig": {
    "StripeSecretKey": "${STRIPE_SECRET_KEY:-}",
    "StripePublishableKey": "${STRIPE_PUBLISHABLE_KEY:-}",
    "StripeWebhookSecret": "${STRIPE_WEBHOOK_SECRET:-}",
    "SuccessUrl": "/cookbook/order/{0}",
    "CancelUrl": "/cookbook/order/{0}?cancelled=true",
    "RecipePrice": 0.20,
    "Currency": "usd",
    "TestMode": true
  },
  "DefaultAdminUser": {
    "Email": "admin@test.zarichney.com",
    "UserName": "testadmin",
    "Password": "TestAdmin123!"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Extensions.Hosting": "Warning",
        "System": "Warning",
        "Zarichney": "Information"
      }
    }
  }
}