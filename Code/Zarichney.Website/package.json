{
  "name": "zarichney-website",
  "version": "1.0.0",
  "scripts": {
    "start": "ng serve zarichney-website --hmr",
    "build-dev": "ng run zarichney-website:build:dev",
    "build-prod": "ng run zarichney-website:build:prod",
    "serve-dev": "npm run clean-dist && npm run build-dev && npm run serve:ssr",
    "serve-prod": "npm run clean-dist && npm run build-prod && npm run serve:ssr",
    "serve:ssr": "node dist/server/server.mjs",
    "clean-dist": "node scripts/clean-dist.mjs",
    "clean-html": "node scripts/clean-html.mjs",
    "test": "jest",
    "test:unit": "jest --testPathPattern=spec\\.ts$",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1.7",
    "@angular/cdk": "19.0.0",
    "@angular/common": "19.1.7",
    "@angular/compiler": "19.1.7",
    "@angular/core": "19.1.7",
    "@angular/forms": "19.1.7",
    "@angular/material": "19.0.0",
    "@angular/platform-browser": "19.1.7",
    "@angular/platform-browser-dynamic": "19.1.7",
    "@angular/platform-server": "19.1.7",
    "@angular/router": "19.1.7",
    "@angular/ssr": "19.1.8",
    "@ngrx/effects": "^19.0.1",
    "@ngrx/store": "^19.0.1",
    "@stripe/stripe-js": "^6.1.0",
    "axios": "^1.6.7",
    "ejs": "latest",
    "express": "^4.18.2",
    "markdown-it": "^13.0.0",
    "ngx-resize-observer": "3.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.8",
    "@angular/cli": "^19.1.8",
    "@angular/compiler-cli": "19.1.7",
    "@angularclass/hmr": "^3.0.0",
    "@playwright/test": "^1.48.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chokidar": "^4.0.0",
