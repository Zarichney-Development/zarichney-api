    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.0",
    "nodemon": "^3.0.1",
    "postcss-svgo": "^6.0.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "resolve-url-loader": "^5.0.0",
    "start-server-and-test": "^2.0.10",
    "terser": "^5.21.0",
